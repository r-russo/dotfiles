[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%
format-padding = 5

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.background-focused}
label-focused-foreground = ${colors.fg-focused}
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = ${colors.fg-empty}
label-empty-padding = 2

[module/mpd]
type = internal/mpd
format-online = <label-song>   <icon-prev> <icon-stop> <toggle> <icon-next>
format-offline = 
label-song = "Ô¢Ü   %artist% - %title%"

icon-play = "ÔÅã "
icon-pause = "ÔÅå "
icon-stop = "ÔÅç "
icon-prev = "ÔÅâ "
icon-next = "ÔÅê "

label-song-maxlen = 120
label-song-ellipsis = true

background = ${colors.background-label}

format-online-padding = ${desktop.padding}
format-online-background = ${colors.background-label}

[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify.sh

# exec-if = ~/.config/polybar/test_spotify.sh

format-prefix = "Ô¢Ü "
interval = 1
format-padding = ${desktop.padding}
format-prefix-foreground = ${colors.color9}

[module/control_prev]
type = custom/script
exec = echo "ÔÅâ "
click-left = playerctl previous
exec-if = pgrep -x spotify
interval = 1

[module/control_next]
type = custom/script
exec = echo "ÔÅê "
click-left = playerctl next
exec-if = pgrep -x spotify
interval = 1

[module/control_toggle]
type = custom/script
exec = ~/.config/polybar/spotify_toggle.sh
click-left = playerctl play-pause
exec-if = pgrep -x spotify
interval = 1

[module/control_stop]
type = custom/script
exec = echo "ÔÅç "
click-left = playerctl stop
exec-if = pgrep -x spotify
interval = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "Ôãõ "
format-prefix-foreground = ${colors.colorA}
# format-background = ${colors.background-label}
format-padding = ${desktop.padding}
margin-module-left = 10
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "Ô°ö "
format-prefix-foreground = ${colors.colorB}
# format-background = ${colors.background-label}
format-padding = ${desktop.padding}
label = %percentage_used%%

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"
time = %H:%M

format-prefix = "Ôôè "
format-prefix-foreground = ${colors.colorC}
# format-background = ${colors.background-label}
format-padding = ${desktop.padding}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
;sink = alsa_output.pci-0000_12_00.3.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true
; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <ramp-volume> <label-volume>

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
;format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
;label-volume = %percentage%%

; Available tokens:
;   %percentage% (default)
label-muted = Ô™Ä muted
label-muted-foreground = #666

; Only applies if <ramp-volume> is used
ramp-volume-0 = ÔÄ¶
ramp-volume-1 = Ô©Ω
ramp-volume-2 = ÔÄ®

ramp-volume-foreground = ${colors.colorD}

; format-volume-background = ${colors.background-label}
format-volume-padding = ${desktop.padding}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = ÔÄë
label-open-foreground = ${colors.icon-power}
label-close = ÔÄç
label-close-foreground = ${colors.icon-power}
label-separator = |
label-separator-foreground = ${colors.foreground-power}

menu-0-0 = logout
menu-0-0-exec = menu-open-3
menu-0-1 = reboot
menu-0-1-exec = menu-open-1
menu-0-2 = power off
menu-0-2-exec = menu-open-2

menu-3-0 = logout
menu-3-0-exec = bspc quit
menu-3-1 = cancel
menu-3-1-exec = menu-open-0

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = systemctl reboot

menu-2-0 = power off
menu-2-0-exec = systemctl poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

format-background = ${colors.background-power}
menu-0-0-foreground = ${colors.foreground-power}
menu-0-1-foreground = ${colors.foreground-power}
menu-0-2-foreground = ${colors.foreground-power}
menu-1-0-foreground = ${colors.foreground-power}
menu-1-1-foreground = ${colors.foreground-power}
menu-2-0-foreground = ${colors.foreground-power}
menu-2-1-foreground = ${colors.foreground-power}
menu-3-0-foreground = ${colors.foreground-power}
menu-3-1-foreground = ${colors.foreground-power}
menu-3-2-foreground = ${colors.foreground-power}
format-padding = ${desktop.padding}

[module/network]
type = internal/network
interface = wlp3s0
; Available tags:
;   <label-connected> (default)
;   <ramp-signal>
format-connected = <ramp-signal> <label-connected>

; Available tags:
;   <label-disconnected> (default)
format-disconnected = <label-disconnected>

; Available tags:
;   <label-connected> (default)
;   <label-packetloss>
;   <animation-packetloss>
format-packetloss = <animation-packetloss> <label-connected>

; All labels support the following tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %local_ip6% [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]

; Default: %ifname% %local_ip%
label-connected = %essid% %local_ip%
label-connected-foreground = ${colors.foreground}

; Default: (none)
label-disconnected = Ô™©
label-disconnected-foreground = ${colors.alert}

format-prefix = "Ô°ö "
format-prefix-foreground = ${colors.colorB}

; Default: (none)
;label-packetloss = %essid%
;label-packetloss-foreground = #eefafafa

; Only applies if <ramp-signal> is used
ramp-signal-0 = üò±
ramp-signal-1 = üò†
ramp-signal-2 = üòí
ramp-signal-3 = üòä
ramp-signal-4 = üòÉ
ramp-signal-5 = üòà

